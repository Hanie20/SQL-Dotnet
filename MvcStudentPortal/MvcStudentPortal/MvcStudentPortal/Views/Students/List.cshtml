@{
}

@model List<MvcStudentPortal.Models.Entities.Student>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model){
            <tr>
                <th scope="row">@student.Id</th>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>